<% unless notice.nil? %>
<% unless notice['message'].nil? %>
<script type="text/javascript">
  alertify.set('notifier','position', 'top-right');
  alertify.success('<%= notice['message'] %>').dismissOthers();
</script>
<% end %>
<% unless notice['errors'].nil? %>
<script type="text/javascript">
  alertify.set('notifier','position', 'top-right');
  alertify.error('<%= notice['errors'] %>').dismissOthers();
</script>
<% end %>
<% end %>

<div class="clearfix"></div>
<div class="">
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>Detail of Purchase Order</strong></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a href="#"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li><a href="#"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <div class="col-md-4 col-sm-4 col-xs-12">
            <div class="table-full-width">
              <table class="table table-bordered">
                <tbody>
                  <tr>
                    <td width="30%">Supplier</td>
                    <td><strong><%= @purchase_order.supplier %></strong></td>
                  </tr>
                  <tr>
                    <td width="30%">Total Price</td>
                    <td><strong><%= @purchase_order.total_price %></strong></td>
                  </tr>
                  <tr>
                    <td width="30%">Created at</td>
                    <td><strong><%= @purchase_order.created_at %></strong></td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
          <div class="col-md-8 col-sm-8 col-xs-12" style="border:0px solid #e5e5e5;">
            <h2 class="prod_title">Detail</h2>
            <div class="table-full-width">
              <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <td>Image</td>
                    <td>Name</td>
                    <td>Price</td>
                    <td>Quantity</td>
                    <td>Total</td>
                  </tr>
                </thead>
                <tbody>
                  <% details = @purchase_order.products_purchase_orders
                  details.each do |detail|
                    %>
                    <tr>
                      <td style="width: 15%;">
                        <div class="col-md-12">
                          <% if detail.product.image.nil? %>
                          <img src="https://www.shearwater.com/wp-content/plugins/lightbox/images/No-image-found.jpg" class="img-thumbnail" alt="<%= detail.product.name %>" />
                          <% else %>
                          <img src="<%= detail.product.image.url.url %>" class="img-thumbnail" alt="<%= detail.product.name %>" />
                          <% end %>
                        </div>
                      </td>
                      <td><strong><%= detail.product.name %></strong></td>
                      <td><strong><%= detail.product.price %></strong></td>
                      <td><strong><%= detail.quantity %></strong></td>
                      <td><strong><%=  detail.product.price * detail.quantity %></strong></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
                <%= link_to 'Back', purchase_orders_path, class: "btn btn-default pull-right" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
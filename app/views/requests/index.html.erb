<% unless notice.nil? %>
<% unless notice['errors'].nil? %>
<script type="text/javascript">
  <% notice['errors'].each do |e| %>
  alertify.set('notifier','position', 'top-right');
  alertify.error('<%= e %>').dismissOthers();
  <% end %>
</script>
<% end %>
<% unless notice['message'].nil? %>
<script type="text/javascript">
  alertify.set('notifier','position', 'top-right');
  alertify.success('<%= notice['message'] %>').dismissOthers();
</script>
<% end %>
<% end %>
<div class="clearfix"></div>
<div class="col-md-12 col-sm-12 col-xs-12">
  <div class="x_panel">
    <div class="x_title">
      <h2>Request</h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
        <li><a href="#"><i class="fa fa-close"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <table id="datatable-buttons-request" class="table table-striped table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone number</th>
            <th>Shop name</th>
            <th>Shop address</th>
            <th>Show</th>
          </tr>
        </thead>

        <tbody>
          <% @requests.each do |request| %>
          <tr>
            <td><%= request.name %></td>
            <td><%= request.email %></td>
            <td><%= request.phone_number %></td>
            <td><%= request.shop_name %></td>
            <td><%= request.shop_address %></td>
            <td><%= link_to request do %>
              <button class="btn btn-primary btn-xs" ><span class="fa fa-search"></span></button>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<br>

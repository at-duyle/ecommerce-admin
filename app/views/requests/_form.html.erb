<%= form_with(model: request, local: true) do |form| %>
<% if request.errors.any? %>
<% request.errors.full_messages.each do |message| %>
<script>
  alertify.set('notifier','position', 'top-right');
  alertify.error('<%= message %>');
</script>
<% end %>
<% end %>

<div class="field">
  <%= form.label :name %>
  <%= form.text_field :name, id: :request_name %>
</div>

<div class="field">
  <%= form.label :email %>
  <%= form.text_field :email, id: :request_email %>
</div>

<div class="field">
  <%= form.label :phone_number %>
  <%= form.text_field :phone_number, id: :request_phone_number %>
</div>

<div class="field">
  <%= form.label :shop_name %>
  <%= form.text_field :shop_name, id: :request_shop_name %>
</div>

<div class="field">
  <%= form.label :shop_address %>
  <%= form.text_field :shop_address, id: :request_shop_address %>
</div>

<div class="field">
  <%= form.label :latitude %>
  <%= form.text_field :latitude, id: :request_latitude %>
</div>

<div class="field">
  <%= form.label :longitude %>
  <%= form.text_field :longitude, id: :request_longitude %>
</div>

<div class="actions">
  <%= form.submit %>
</div>
<% end %>

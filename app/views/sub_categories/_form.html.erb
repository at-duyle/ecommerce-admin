<div class="x_content">
  <br />
  <%= form_with(model: sub_category, local: true, id: "demo-form2", class: "form-horizontal form-label-left") do |form| %>
    <% if sub_category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(sub_category.errors.count, "error") %> prohibited this sub_category from being saved:</h2>

        <ul>
        <% sub_category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.text_field :name, id: :sub_category_name, class: "form-control col-md-7 col-xs-12" %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :category_id, class: "control-label col-md-3 col-sm-3 col-xs-12" %>
      <div class="col-md-6 col-sm-6 col-xs-12">
        <%= form.select :category_id, options_for_select(@categories.map{ |c| [c.name, c.id] }, selected: sub_category.category_id), {include_blank: '-- select --'}, { id: 'category', class: "form-control col-md-7 col-xs-12" } %>
      </div>
    </div>

    <div class="ln_solid"></div>

    <div class="actions form-group">
      <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
        <%= form.submit class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

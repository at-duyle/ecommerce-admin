<%= form_with(model: delivery_order, local: true, class: "form-horizontal") do |form| %>

<div class="form-group">
  <%= form.label :status, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= form.select :status, options_for_select(@status.map { |c|
              [c, c] }, selected: delivery_order.status), {}, {id: :delivery_order_status,class: 'form-control' } %>
  </div>
</div>
<div class="actions">
  <%= form.submit class: "btn btn-primary" %>
</div>
<% end %>

<%= form_with(model: admin, local: true, class: "form-horizontal col-md-6 col-sm-offset-3") do |form| %>
<% if admin.errors.any? %>
<% admin.errors.full_messages.each do |message| %>
<script>
  alertify.set('notifier','position', 'top-right');
  alertify.error('<%= message %>');
</script>
<% end %>
<% end %>

<div class="form-group">
  <%= form.label :username, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= form.text_field :username, id: :admin_username, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :email, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= form.text_field :email, id: :admin_email, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :name, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= form.text_field :name, id: :admin_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= form.label :gender, class: "control-label col-sm-2" %>
  <div class="col-sm-10">
    <%= form.radio_button :gender, "male", checked: true %>Male
    <%= form.radio_button :gender, "female" %>Female
    <%= form.radio_button :gender, "ohter" %>Other
  </div>
</div>

<div class="actions">
  <%= form.submit class: "btn btn-primary pull-right" %>
  <%= link_to 'Back', admins_path, class: "btn btn-default pull-right" %>
</div>
<% end %>
